<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a.assignmnet.MainActivityLogin">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="116dp"
            android:layout_height="129dp"
            android:layout_alignStart="@+id/btnLogin"

            android:contentDescription=""
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lê Vương Thiện Phú"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPass"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="68dp"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/txtUser1" />

        <TextView
            android:id="@+id/txtUser1"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="01235073206"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPass"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="68dp"
            android:layout_alignTop="@+id/txtTest1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp" />

        <TextView
            android:id="@+id/txtUser2"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUser1"
            android:layout_marginTop="19dp"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="phulvtps05964@fpt.edu.vn"
            android:textColor="@color/colorDarkBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPass"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="68dp"
            android:layout_alignEnd="@+id/txtUser1" />

        <TextView
            android:id="@+id/txtUser3"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtUser2"
            android:layout_below="@+id/txtUser2"
            android:layout_marginTop="19dp"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="User Type: Administrator"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPass"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="68dp" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="51dp"
            android:background="#0E3047"
            android:text="Update "
            android:textColor="@color/colorWhite"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="274dp" />


        <TextView
            android:id="@+id/txtTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtPass"
            android:layout_below="@+id/txtUser"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:text="" />

        <TextView
            android:id="@+id/txtTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtTest1"
            android:layout_below="@+id/txtPass"
            android:layout_marginTop="13dp"
            android:text="" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>